<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_small_24"
            android:background="@color/color_primary">
            
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                
                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_bg"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:titleTextColor="@color/white"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                // Top bar

                <LinearLayout
                    style="@style/top_bar">
                    <LinearLayout
                        style="@style/top_bar_side_element">
                        <TextView
                            style="@style/top_bar_title_text"
                            android:text="@string/top_bar_left_title_text"/>
                        <TextView
                            style="@style/top_bar_bottom_text"
                            android:text="@string/top_bar_bottom_left_text"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/top_bar_border">
                    </LinearLayout>

                    <LinearLayout
                        style="@style/top_bar_middle_element">
                        <TextView
                            style="@style/top_bar_title_text"
                            android:text="@string/top_bar_title_middle_text"/>
                        <TextView
                            style="@style/top_bar_bottom_text"
                            android:text="@string/top_bar_bottom_middle_text"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/top_bar_border">
                    </LinearLayout>

                    <LinearLayout
                        style="@style/top_bar_side_element">
                        <TextView
                            style="@style/top_bar_title_text"
                            android:text="@string/top_bar_title_right_text"/>
                        <TextView
                            style="@style/top_bar_bottom_text"
                            android:text="@string/top_bar_bottom_right_text"/>
                    </LinearLayout>
                </LinearLayout>

                // Mobile phone

                <LinearLayout
                    style="@style/container">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>
                    <LinearLayout
                        style="@style/middle_container">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/edit_text"
                                android:inputType="phone"
                                android:hint="@string/mobile_hint"
                                android:text="@string/mobile_temp"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/border_line"/>

                // E-mail

                <LinearLayout
                    style="@style/container">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>
                    <LinearLayout
                        style="@style/middle_container">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/email_et"
                                style="@style/edit_text"
                                android:inputType="textEmailAddress"
                                android:hint="@string/email_hint"
                                android:text="@string/email_temp"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/border_line"/>

                // VK

                <LinearLayout
                    style="@style/container">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk"/>
                    <LinearLayout
                        style="@style/middle_container">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/vk_et"
                                style="@style/edit_text"
                                android:inputType="textUri"
                                android:hint="@string/vk_hint"
                                android:text="@string/vk_temp"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/border_line"/>

                // Github

                <LinearLayout
                    style="@style/container">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/git_icon"/>
                    <LinearLayout
                        style="@style/middle_container">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/git_et"
                                style="@style/edit_text"
                                android:inputType="textUri"
                                android:hint="@string/git_hint"
                                android:text="@string/git_temp"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/border_line"/>

                // About

                <LinearLayout
                    style="@style/container">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>
                    <LinearLayout
                        style="@style/middle_container">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/profile_et"
                                style="@style/edit_text"
                                android:hint="@string/about_hint"
                                android:text="@string/about_temp"
                                android:inputType="textMultiLine"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

